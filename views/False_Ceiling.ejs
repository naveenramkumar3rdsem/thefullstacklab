<button class="Add_to_The_Preferences_List" onclick="Select_Preferences('Fibre_False_Ceiling')">Add to The Preferences List</button>
<button class="More_Details" onclick="display('Fibre_False_Ceiling');">More details</button>
<p class="Description">Fibre false ceiling is gaining its popularity due to low cost and easy installation process. Fibre ceilings are always in high demand in commercial applications like showrooms etc.</p>
</div>
<h3 id="Welcome_tag"></h3>
<script>
function display(ID_Name){
if(document.getElementById(ID_Name).getElementsByClassName("More_Details")[0].innerHTML== "More details"){
document.getElementById(ID_Name).getElementsByClassName("Description")[0].style.display="block";
document.getElementById(ID_Name).style.height="500px";
document.getElementById(ID_Name).getElementsByClassName("More_Details")[0].innerHTML="Less details";
}
else{
document.getElementById(ID_Name).getElementsByClassName("Description")[0].style.display="none";
document.getElementById(ID_Name).style.height="410px";
document.getElementById(ID_Name).getElementsByClassName("More_Details")[0].innerHTML="More details";
}
}
function Select_Preferences(ID_Name){
if(document.getElementById(ID_Name).getElementsByClassName("Add_to_The_Preferences_List")[0].innerHTML== "Add to The Preferences List"){
document.getElementById(ID_Name).getElementsByClassName("Add_to_The_Preferences_List")[0].style.backgroundColor="green";
document.getElementById(ID_Name).getElementsByClassName("Add_to_The_Preferences_List")[0].innerHTML="Deselect the Preference";
}
else{
document.getElementById(ID_Name).getElementsByClassName("Add_to_The_Preferences_List")[0].style.backgroundColor="transparent";
document.getElementById(ID_Name).getElementsByClassName("Add_to_The_Preferences_List")[0].innerHTML="Add to The Preferences List";
}
}
document.getElementById("Welcome_tag").innerHTML="Hello "+"<%-Username%>";
function function2(){
var i;
for(i=0; i<3; i++){
	if(document.getElementsByClassName("Interior_Design_Options")[i].getElementsByClassName("Add_to_The_Preferences_List")[0].style.backgroundColor=="green"){
		document.getElementById("element_type").value=document.getElementById("element_type").value+document.getElementsByClassName("Image_Captions")[i].innerHTML+",";
	}
}
document.getElementById("my_form").submit();
}
</script>
