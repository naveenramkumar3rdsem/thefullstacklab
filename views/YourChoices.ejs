}
else if(Results[i].room_name=="Kitchen Room"){
	h1.style.top=postop[1]+"px";
	h1.style.left=posleft[1]+"px";
	posleft[1]=posleft[1]+520;
   const name=Results[i].element_name;
   button1.onclick=function(){function1('Kitchen Room', name);};
}
